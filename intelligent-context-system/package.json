{
  "name": "intelligent-context-system",
  "version": "1.0.0",
  "description": "基于后台常驻的大模型上下文智能推送系统",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "node server/index.js",
    "client": "cd client && npm run dev",
    "setup": "npm install && cd client && npm install",
    "build": "cd client && npm run build",
    "start": "pm2 start server/index.js --name=intelligent-context-system",
    "stop": "pm2 delete intelligent-context-system"
  },
  "dependencies": {
    "express": "^4.18.2",
    "ws": "^8.16.0",
    "level": "^8.0.1",
    "sqlite3": "^5.1.7",
    "openai": "^4.24.0",
    "dotenv": "^16.3.1",
    "uuid": "^9.0.1",
    "chokidar": "^3.5.3",
    "node-fetch": "^3.3.2",
    "rss-parser": "^3.13.0",
    "cors": "^2.8.5",
    "concurrently": "^8.2.2"
  }
}
